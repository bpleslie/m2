<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="carriers">
            <group id="flatrate">
                <field id="flatrate_shipping_subtotal" sortOrder="4" type="text" translate="label" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Minimum Order Amount</label>
                </field>
            </group>
        </section>
        <section id="interactone_fixedshipping" sortOrder="200" translate="label" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Fixed Shipping</label>
            <tab>sales</tab>
            <resource>Training_FixedShipping::fixedshipping</resource>
            <group id="settings" translate="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Settings</label>
                <field id="enabled" translate="label" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Enable Module</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="flatrate" translate="label" sortOrder="10" showInDefault="1" showInStore="0" showInWebsite="0">
                    <label>Enable For Flat Rate</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>